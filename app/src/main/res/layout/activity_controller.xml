<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ControllerActivity">

    <Button
        android:id="@+id/orientationButton"
        android:layout_width="151dp"
        android:layout_height="149dp"
        android:background="@drawable/circle_button_shape"
        android:onClick="orientationButtonPressed"
        android:text="Orientation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/positionButton"
        android:layout_width="151dp"
        android:layout_height="149dp"
        android:background="@drawable/circle_button_shape"
        android:onClick="positionButtonPressed"
        android:text="Position"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/controlText"
        android:layout_width="160dp"
        android:layout_height="132dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/orientationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>